[^:]+:[^:]+:DAE:MONITORSPECTRUM  ALLOW 
[^:]+:[^:]+:DAE:MONITORTO  ALLOW 
[^:]+:[^:]+:DAE:MONITORFROM  ALLOW 
[^:]+:[^:]+:DAE:NUMSPECTRA  ALLOW 
[^:]+:[^:]+:DAE:NUMTIMECHANNELS  ALLOW 
[^:]+:[^:]+:DAE:SIM_MODE  ALLOW 
[^:]+:[^:]+:DAE:STARTTIME  ALLOW 
[^:]+:[^:]+:DAE:RUNDURATION  ALLOW 
[^:]+:[^:]+:DAE:PERIOD  ALLOW 
